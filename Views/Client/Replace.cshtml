<p>Replace @Model.GetName()'s @Model.GetScissors().name With @Model.GetDropped().name?</p>

<form class="" action="/Stylist/@Model.GetId()/Replace" method="post">
<input type="hidden" id="change" name="change" value="true">
<input type="hidden" id="drop" name="drop" value="@Model.GetDropInfo()">
<button type="submit">Yes</button>
</form>

<form class="" action="/Stylist/@Model.GetId()/Replace" method="post">
<input type="hidden" id="change" name="change" value="false">
<button type="submit">No</button>
</form>
