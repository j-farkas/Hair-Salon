<h1>List of Stylists</h1>

<ul>
  @foreach(var stylist in Model)
  {
    <a href="Stylist/@stylist.id">@stylist.name Level: @stylist.level</a><br>
  }
</ul>

<a href=/stylist/new>ADD A STYLIST</a>
@if(Model.Count > 0)
{
  <a href=/client/new>ADD A CLIENT</a>
}

<form class="" action="/Stylist/Delete" method="post">
  <button type="submit">Remove All Stylists</button>
</form>

<form class="" action="/Client/Delete" method="post">
  <button type="submit">Remove All Clients</button>
</form>
